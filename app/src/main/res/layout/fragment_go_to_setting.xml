<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgr_lg"
    tools:context=".view.fragment.GoToSettingFragment">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/setting_title"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintTop_toTopOf="@id/img_back" />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_outline_settings"
        android:layout_marginTop="50dp"
        app:tint="@color/pink"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/img_setting"
        app:layout_constraintWidth_percent="0.7"
        android:text="@string/storage_permission_is_required_to_access_this_feature_please_grant_permission_to_continue"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_step_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_head"
        app:layout_constraintWidth_percent="0.55"
        android:layout_marginTop="35dp"
        android:text="@string/_1_tap_quot_go_to_settings_quot_to_open_the_app"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_step_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_step_1"
        android:text="@string/_2_choose_permissions"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tv_step_1"
        app:layout_constraintEnd_toEndOf="@id/tv_step_1"/>
    <TextView
        android:id="@+id/tv_step_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_step_2"
        android:text="@string/_3_tap_photo_and_video"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tv_step_2"
        app:layout_constraintEnd_toEndOf="@id/tv_step_2"/>
    <TextView
        android:id="@+id/tv_step_micro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_step_2"
        android:text="@string/_3_tap_microphone"
        android:visibility="gone"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tv_step_2"
        app:layout_constraintEnd_toEndOf="@id/tv_step_2"/>

    <TextView
        android:id="@+id/tv_step_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_step_3"
        android:text="@string/_4_tap_music_and_audio"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tv_step_3"
        app:layout_constraintEnd_toEndOf="@id/tv_step_3"/>

    <TextView
        android:id="@+id/tv_once"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:text="@string/once_permission_is_granted_return_to_the_app"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_step_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_go_to_settings"/>

    <TextView
        android:id="@+id/tv_go_to_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Go to settings"
        android:textColor="@color/pink"
        android:background="@drawable/background_button_lg"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.3"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_once"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>