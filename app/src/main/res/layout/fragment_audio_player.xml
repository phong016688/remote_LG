<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_view_audio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="200dp" />

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/tv_quantity_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="60dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/device"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_share"
                    android:visibility="gone" />
            </RelativeLayout>
        </Toolbar>
    </FrameLayout>

    <SeekBar
        android:id="@+id/seekbar_time_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/relativeLayout_media"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="16dp"
        android:thumbTint="@color/color_app" />

    <RelativeLayout
        android:id="@+id/relativeLayout_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_backward"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/img_forward"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_next" />
    </RelativeLayout>
    <!--    <FrameLayout-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:id="@+id/frameLayoutBannerAdmob"-->
    <!--        android:layout_marginStart="2dp"-->
    <!--        android:layout_marginEnd="2dp"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"/>-->
</RelativeLayout>
